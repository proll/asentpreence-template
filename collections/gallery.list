<section class="collection__section">
  <ul class="collection__grid">
    {.repeated section items}
    <li class="collection__grid-itm" data-href="{clickthroughUrl}" data-target="popup">
    	{.section body}<div class="collection__grid-itm-body">{@}</div>{.end}
        <img src="{assetUrl}?format=750w" alt="{.section title}{@}{.end}" class="collection__grid-itm-img">
    </li>
    {.end}
  </ul>
</section>