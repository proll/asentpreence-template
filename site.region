<!doctype html>
<html>
<head>

<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
{.if template.mobileStylesEnabled}
<meta name="viewport" content="width=device-width, initial-scale=1">
{.end}
{squarespace-headers}

</head>
<body id="{squarespace.page-id}" class="body__page-{squarespace.page-id} {squarespace.page-classes}">

<header>
  <a href="/" class="header__menu"><i class="i i-menu"></i></a>
  <a href="/" class="header__logo"><i class="i i-logo"></i></a>
</header>


  <div id="canvasWrapper" class="sqs-announcement-bar-dropzone">
    <div id="canvas">
    
      <div id="headerWrapper">
      </div>
      
      <div id="pageWrapper">
      <section id="page">

        <div id="mainContent" role="main" data-content-field="main-content">
          <!-- CATEGORY NAV -->
          {.section collection}{.equal? typeName "products"}{.section categories}
          <div id="categoryNav">
            <input type="checkbox" name="category-nav-toggle" id="categoryNavToggle" class="category-nav-toggle hidden" />
            <label for="categoryNavToggle" class="category-nav-toggle-label" onclick></label>
            <nav class="category-nav">
              <ul class="category-nav-links">
                <li class="filter"><a>Filter{.if categoryFilter}: {categoryFilter}{.end}</a></li>
                <li{.if categoryFilter}{.or} class="active-link all"{.end}><a href="{fullUrl}">All</a></li>
              {.repeated section @}
                <li{.equal? categoryFilter @} class="active-link"{.end}><a href="{fullUrl}?category={@|url-encode}">{@}</a></li>
              {.end}
              </ul>
            </nav>
          </div>
          {.end}{.end}{.end}
          {squarespace.main-content}
        </div>

        {.section collection}
        {.collectionTypeNameEquals? blog}
        <aside id="sidebarWrapper">
        <div id="sidebar">
          <squarespace:block-field id="sidebarBlocks" label="Blog Sidebar Content" />
        </div>
        </aside>
        {.end}
        {.end}

      </section>
      </div>

      <footer>
        {.section website}
          {.if socialAccounts}
          <div id="sqs-footer-social" data-content-field="connected-accounts">
            {.repeated section socialAccounts}<a{.if profileUrl} href="{profileUrl}" target="_blank"{.or} title="{screenname}"{.end} class="social-{serviceName}"></a>{.end}
          </div>
          {.end}
        {.end}
      </footer>
          
    </div>
  </div>
  
{squarespace-footers}

<div class="menu">
  <ul class="menu__list">
    <li class="menu__group">
      <squarespace:navigation navigationId="mainNav" template="navigation" />
    </li>
    <li class="menu__group">
      <squarespace:navigation navigationId="secondaryNav" template="navigation" />
    </li>
  </ul>
</div>

<squarespace:script src="vendor/jquery/jquery.1.11.1.js" combo="true" />
<squarespace:script src="vendor/lodash.js" combo="true" />
<squarespace:script src="app.js" combo="true" />

{.if template.mobileStylesEnabled}{.or}
  <script>
    Y.use('node', function() {
      Y.on('domready', function() {
        var move;
        Y.all('.subnav a').each(function(a) {
          a.on('touchstart', function() {
            move = false;
          });
          a.on('touchmove', function() {
            move = true;
          });
          a.on('touchend', function() {
            if (move === false) {
              window.location = a.getAttribute('href');
            }
          });
        });
      });
    });
  </script>
{.end}
  
</body>
</html>   

